// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//Establecemos los modelos Prisma y las relaciones entre estos. 


//Definimos el modelo de Usuario con un id, un nombre, un email para identificar al usuario, su respectiva contraseña y lo vamos a relacionar con el modelo Lista: 
model Usuario {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  password String
  listas Lista[]
}

//Definimos el modelo de Lista con un id, un titulo y crearemos una relación con el Usuario y la Tarea: 
model Lista {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  titulo String
  usuario Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String @db.ObjectId
  tareas Tarea[]
}

//Definimos el modelo de Tarea con un id, una descripcion y crearemos una relación con Lista: 
model Tarea {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  descripcion String
  lista Lista @relation(fields: [listaId], references: [id])
  listaId String @db.ObjectId
}
